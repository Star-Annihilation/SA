{
	hide fire;
	Static_Var_1 = 0;
	Static_Var_2 = 0;
	Static_Var_3 = 1;
	Static_Var_4 = 1;
	Static_Var_5 = 16;
	Static_Var_6 = 1;
	start-script MotionControl();
	start-script SmokeUnit();
}

StartMoving()
